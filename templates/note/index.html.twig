{% extends 'base.html.twig' %}

{% block title %}Note index{% endblock %}

{% block body %}
    <h1>Note index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Note</th>
                <th>Avis</th>
                <th>Creation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for note in notes %}
            <tr>
                <td>{{ note.id }}</td>
                <td>{{ note.note }}</td>
                <td>{{ note.avis }}</td>
                <td>{{ note.creation ? note.creation|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('note_show', {'id': note.id}) }}">show</a>
                    {% if app.user %}
                        {% if note.auteur.id == app.user.id %}
                            <a href="{{ path('note_edit', {'id': note.id}) }}">edit</a>
                        {% endif %}
                        {% if (note.auteur.id == app.user.id) or is_granted('ROLE_MOD') %}
                            {{ include('note/_delete_form.html.twig') }}
                        {% endif %}
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('note_new') }}">Create new</a>
{% endblock %}
